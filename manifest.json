{
  "manifest_version": 2,

  "name": "My Dictionary",
  "description": "Personalized dictionary",
  "version": "1.0",

  "browser_action": {
    "default_icon": "image/icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
          "16": "image/search_16.png",
          "48": "image/search_48.png",
          "128": "image/search_128.png"
        },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications" 
  ],
  /*"optional_permissions": [ "tabs", "/popup.html" ],*/
  "background": {
    "persistent": true,
    "scripts": ["script/popup.js"]
  }
}
